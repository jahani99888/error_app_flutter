workflows:
  build-android-release:
    name: Build Android Release APK
    max_build_duration: 60
    environment:
      vars:
        BUILD_MODE: release
      flutter: stable
      xcode: latest
    scripts:
      - name: Clean project
        script: |
          flutter clean
      - name: Get dependencies
        script: |
          flutter pub get
      - name: Build release APK
        script: |
          flutter build apk --release
    artifacts:
      - build/app/outputs/flutter-apk/app-release.apk
